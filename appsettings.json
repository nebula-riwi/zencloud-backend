{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection" : ""
  },
  "MercadoPago": {
    "PublicKey": "",
    "AccessToken": ""
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "IpWhitelist": [],
    "EndpointWhitelist": [
      "get:/api/health",
      "get:/",
      "options:*",
      "options:/api/*",
      "options:/api/Auth/*",
      "post:/api/Auth/login",
      "post:/api/Auth/register"
    ],
    "ClientWhitelist": [],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 60
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      },
      {
        "Endpoint": "POST:/api/Auth/login",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "POST:/api/Auth/register",
        "Period": "1m",
        "Limit": 3
      },
      {
        "Endpoint": "POST:/api/Auth/forgot-password",
        "Period": "1h",
        "Limit": 3
      },
      {
        "Endpoint": "POST:/api/DatabaseInstance",
        "Period": "1m",
        "Limit": 10
      },
      {
        "Endpoint": "DELETE:/api/DatabaseInstance/*",
        "Period": "1m",
        "Limit": 5
      }
    ],
    "QuotaExceededResponse": {
      "Content": "{{ \"message\": \"Límite de solicitudes excedido. Por favor, intente más tarde.\", \"details\": \"Quota exceeded. Maximum allowed: {0} per {1}\" }}",
      "ContentType": "application/json",
      "StatusCode": 429
    }
  },
  "IpRateLimitPolicies": {
    "IpRules": []
  }
}
